# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make clean  - removes all files generated by make.

TARGET1 = shared
TARGET2 = hello

# Where to find user code.
USER_DIR = .

CPPFLAGS += -isystem $(GTEST_DIR)/include -isystem $(GMOCK_DIR)/include 

# CXXFLAGS += -std=c++11 -g -Wall -Wextra -pthread -D_GLIBCXX_DEBUG
CXXFLAGS += -std=c++11 -g -Wall -Wextra -pthread -D_GLIBCXX_DEBUG

TESTS = $(TARGET1)_out $(TARGET2)_out 

# House-keeping build targets.
all : $(TESTS)

clean :
	rm -f $(TESTS) *.a *.o

#
$(TARGET1).o : $(TARGET1).c
	gcc -fpic -c $(TARGET1).c -o $(TARGET1).o

$(TARGET1)_out : $(TARGET1).o main.c
#	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@
	gcc -shared shared.o -o libshared.so
	gcc main.c libshared.so -o $@


#
$(TARGET2).o : $(TARGET2).c
	gcc -c $(TARGET2).c -o $(TARGET2).o

$(TARGET2)_out : $(TARGET2).o
	gcc $^ -o $@

