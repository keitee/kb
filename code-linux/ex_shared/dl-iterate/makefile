# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make clean  - removes all files generated by make.

TARGET1 = driver

# Where to find user code.
USER_DIR = .

CPPFLAGS += -isystem $(GTEST_DIR)/include -isystem $(GMOCK_DIR)/include 

# CXXFLAGS += -std=c++11 -g -Wall -Wextra -pthread -D_GLIBCXX_DEBUG
CXXFLAGS += -std=c++11 -g -Wall -Wextra -pthread -D_GLIBCXX_DEBUG

TESTS = $(TARGET1)_out

# House-keeping build targets.
all : $(TESTS)

clean :
	rm -f $(TESTS) *.a *.o

#
libfunc.o : ml_main.c
	gcc -g -fpic -c ml_main.c -o libfunc.o

$(TARGET1)_out : libfunc.o driver.c
	gcc -g -std=c99 -shared libfunc.o -o libshared.so
	gcc -g -std=c99 driver.c libshared.so -o $@

